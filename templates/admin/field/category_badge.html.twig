{% set category_colors = {
    'lave-linge': '#3498db',
    'refrigerateur': '#1abc9c',
    'four': '#e74c3c',
    'lave-vaisselle': '#9b59b6',
    'seche-linge': '#f39c12',
    'cuisiniere': '#e67e22',
    'micro-ondes': '#95a5a6',
    'cave-a-vin': '#8e44ad',
    'hotte': '#34495e',
    'petit-electromenager': '#16a085'
} %}

{% set category_labels = {
    'lave-linge': 'Lave-linge',
    'refrigerateur': 'Réfrigérateur',
    'four': 'Four',
    'lave-vaisselle': 'Lave-vaisselle',
    'seche-linge': 'Sèche-linge',
    'cuisiniere': 'Cuisinière',
    'micro-ondes': 'Micro-ondes',
    'cave-a-vin': 'Cave à vin',
    'hotte': 'Hotte',
    'petit-electromenager': 'Petit électroménager'
} %}

{# EasyAdmin passe la valeur dans la variable 'value' pour les templates de champs #}
{% set category_value = value ?? field_value ?? '' %}
{% set color = category_colors[category_value] ?? '#7f8c8d' %}
{% set label = category_labels[category_value] ?? category_value|capitalize %}

<span class="badge" style="background-color: {{ color }}; color: white; padding: 5px 10px; border-radius: 12px; font-size: 11px; font-weight: 600;">
    {{ label }}
</span>
