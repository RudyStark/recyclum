{% set tier_config = {
    'premium': { color: '#FFD700', icon: '⭐', label: 'Premium' },
    'standard': { color: '#3498db', icon: '●', label: 'Standard' },
    'entry': { color: '#95a5a6', icon: '○', label: 'Entrée' }
} %}

{% set config = tier_config[value.tier] ?? tier_config.standard %}

<span class="badge" style="background-color: {{ config.color }}; color: #2c3e50; padding: 5px 10px; border-radius: 12px; font-size: 11px; font-weight: 600;">
    {{ config.icon }} {{ config.label }}
</span>
