<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block page_title %}Recyclum BackOffice{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">


    {% block configured_stylesheets %}
        {{ encore_entry_link_tags('admin') }}
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
                <link rel="stylesheet" href="{{ asset('build/admin.css') }}?v={{ random() }}">
    {% endblock %}

    {% block configured_head_contents %}{% endblock %}
</head>
<body class="ea {% block body_class %}{% endblock %}">

<div class="admin-layout-wrapper">
    {# SIDEBAR CUSTOM #}
    {% block sidebar %}
        {% include 'admin/menu.html.twig' %}
    {% endblock %}

    {# CONTENU PRINCIPAL #}
    <div class="admin-main-content">
        {% block wrapper %}
            {% block content %}
                {% block main %}{% endblock %}
            {% endblock %}
        {% endblock wrapper %}
    </div>
</div>

{% block configured_body_contents %}{% endblock %}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
{% block configured_javascripts %}
    {{ encore_entry_script_tags('admin') }}
{% endblock %}

</body>
</html>
