<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block page_title %}Recyclum BackOffice{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    {% block configured_stylesheets %}
        {{ encore_entry_link_tags('admin') }}
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <link rel="stylesheet" href="{{ asset('build/admin.css') }}?v={{ random() }}">
    {% endblock %}

    {% block configured_head_contents %}{% endblock %}
</head>
<body class="ea {% block body_class %}{% endblock %}">

{# RÉCUPÈRE LES NOTIFICATIONS UNE SEULE FOIS #}
{% set notifications = get_notifications() %}
{% set notificationCount = get_notification_count() %}

<div class="admin-layout-wrapper" data-turbo="false">

    {# ===================================== #}
    {# SIDEBAR CUSTOM                       #}
    {# ===================================== #}
    {% block sidebar %}
        {% include 'admin/menu.html.twig' %}
    {% endblock %}

    {# ===================================== #}
    {# CONTENU PRINCIPAL                    #}
    {# ===================================== #}
    <div class="admin-main-content">

        {# ===================================== #}
        {# HEADER AVEC EFFET GLASS PRO          #}
        {# ===================================== #}
        {% block admin_header %}
            <div class="admin-header">
                <div class="admin-header-left">
                    <h1>{% block header_title %}Dashboard{% endblock %}</h1>
                </div>

                <div class="admin-header-right">

                    {# BARRE DE RECHERCHE GLOBALE #}
                    <div class="header-search">
                        <i class="fas fa-search"></i>
                        <input type="text" placeholder="Rechercher..." class="header-search-input">
                        <kbd class="header-search-kbd">⌘K</kbd>
                    </div>

                    {# ===================================== #}
                    {# CLOCHE NOTIFICATIONS                 #}
                    {# ===================================== #}
                    <div class="notification-icon" data-controller="admin--notifications-dropdown">
                        <button class="notification-bell" data-action="click->admin--notifications-dropdown#toggle">
                            <i class="fas fa-bell"></i>
                            {% if notificationCount > 0 %}
                                <span class="notification-badge">{{ notificationCount }}</span>
                            {% endif %}
                        </button>

                        {# DROPDOWN MENU NOTIFICATIONS #}
                        <div class="notification-dropdown-menu" data-admin--notifications-dropdown-target="menu">
                            <div class="notification-dropdown-content">
                                <div class="notification-dropdown-header">
                                    <i class="fas fa-bell"></i> Notifications
                                    {% if notificationCount > 0 %}
                                        <span style="color: #16C669; font-weight: 800;">({{ notificationCount }})</span>
                                    {% endif %}
                                </div>

                                {% if notifications is empty %}
                                    <div class="notification-empty">
                                        <i class="fas fa-check-circle" style="font-size: 2rem; margin-bottom: 0.5rem; display: block;"></i>
                                        Aucune notification
                                    </div>
                                {% else %}
                                    {% for notification in notifications %}
                                        <div class="notification-dropdown-item">
                                            <div class="notification-item-header">
                                                <div class="notification-item-icon" style="background: {{ notification.color }};">
                                                    <i class="fas {{ notification.icon }}"></i>
                                                </div>
                                                <div class="notification-item-content">
                                                    <h5 class="notification-item-title">{{ notification.title }}</h5>
                                                    <p class="notification-item-message">{{ notification.message }}</p>

                                                    {% if notification.items is defined and notification.items is not empty %}
                                                        <ul class="notification-item-list">
                                                            {% for item in notification.items|slice(0, 3) %}
                                                                <li>
                                                                    <a href="{{ item.url }}" class="notification-item-link">
                                                                        <strong>{{ item.customer }}</strong> - {{ item.appliance }}
                                                                        {% if item.price is defined %}
                                                                            ({{ item.price }}€)
                                                                        {% elseif item.date is defined %}
                                                                            - {{ item.date }}
                                                                        {% endif %}
                                                                    </a>
                                                                </li>
                                                            {% endfor %}
                                                            {% if notification.items|length > 3 %}
                                                                <li style="text-align: center; padding-top: 0.5rem;">
                                                                    <a href="{{ notification.url }}" class="notification-item-link">
                                                                        Voir tout ({{ notification.items|length }})
                                                                    </a>
                                                                </li>
                                                            {% endif %}
                                                        </ul>
                                                    {% endif %}
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endblock %}

        {# ===================================== #}
        {# BANDEAU NOTIFICATIONS PRIORITAIRES   #}
        {# ===================================== #}
        {% block notification_banner %}
            {% if notifications is not empty %}
                {% for notification in notifications %}
                    {% if notification.type == 'buyback_pending' %}
                        <div class="notification-banner" id="notification-banner-{{ notification.type }}">
                            <div class="notification-banner-icon">
                                <i class="fas {{ notification.icon }}"></i>
                            </div>
                            <div class="notification-banner-content">
                                <h4 class="notification-banner-title">{{ notification.title }}</h4>
                                <p class="notification-banner-message">{{ notification.message }} - Rappel sous 24h requis !</p>
                            </div>
                            <div class="notification-banner-actions">
                                <a href="{{ notification.url }}" class="notification-banner-btn">
                                    <i class="fas fa-eye"></i> Voir les demandes
                                </a>
                            </div>
                            <button class="notification-banner-close" onclick="this.closest('.notification-banner').remove()">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    {% endif %}
                {% endfor %}
            {% endif %}
        {% endblock %}

        {# ===================================== #}
        {# CONTENU PRINCIPAL DES PAGES          #}
        {# ===================================== #}
        {% block wrapper %}
            {% block content %}
                {% block main %}{% endblock %}
            {% endblock %}
        {% endblock wrapper %}
    </div>
</div>

{% block configured_body_contents %}{% endblock %}

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
{% block configured_javascripts %}
    {{ encore_entry_script_tags('admin') }}
{% endblock %}

</body>
</html>
