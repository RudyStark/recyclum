{% extends 'admin/base_layout.html.twig' %}

{% block body_class 'dashboard' %}

{% block main %}
    <div style="max-width: 1400px; margin: 0 auto;">
        {# HERO #}
        <div style="background: linear-gradient(135deg, #16C669 0%, #12a356 100%); border-radius: 16px; padding: 3rem; margin-bottom: 2rem; color: white;">
            <h1 style="font-size: 2.5rem; font-weight: 900; margin: 0 0 0.5rem 0;">
                <i class="fa fa-recycle" style="margin-right: 0.75rem;"></i>
                Bienvenue sur Recyclum
            </h1>
            <p style="font-size: 1.125rem; margin: 0; opacity: 0.9;">
                Gérez votre catalogue de produits reconditionnés
            </p>
        </div>

        {# STATS CARDS #}
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 1.5rem; margin-bottom: 2rem;">
            <div style="background: white; border: 1px solid #e6edf2; border-radius: 12px; padding: 1.5rem; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);">
                <div style="display: flex; align-items: center; gap: 1rem;">
                    <div style="width: 56px; height: 56px; background: rgba(22, 198, 105, 0.1); border-radius: 12px; display: flex; align-items: center; justify-content: center;">
                        <i class="fa fa-box" style="font-size: 1.5rem; color: #16C669;"></i>
                    </div>
                    <div>
                        <div style="font-size: 0.875rem; color: #6c7783; font-weight: 600; margin-bottom: 0.25rem;">Produits</div>
                        <div style="font-size: 2rem; font-weight: 800; color: #1a2332;">-</div>
                    </div>
                </div>
            </div>

            <div style="background: white; border: 1px solid #e6edf2; border-radius: 12px; padding: 1.5rem; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);">
                <div style="display: flex; align-items: center; gap: 1rem;">
                    <div style="width: 56px; height: 56px; background: rgba(34, 197, 94, 0.1); border-radius: 12px; display: flex; align-items: center; justify-content: center;">
                        <i class="fa fa-check-circle" style="font-size: 1.5rem; color: #22c55e;"></i>
                    </div>
                    <div>
                        <div style="font-size: 0.875rem; color: #6c7783; font-weight: 600; margin-bottom: 0.25rem;">Publiés</div>
                        <div style="font-size: 2rem; font-weight: 800; color: #1a2332;">-</div>
                    </div>
                </div>
            </div>

            <div style="background: white; border: 1px solid #e6edf2; border-radius: 12px; padding: 1.5rem; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);">
                <div style="display: flex; align-items: center; gap: 1rem;">
                    <div style="width: 56px; height: 56px; background: rgba(245, 158, 11, 0.1); border-radius: 12px; display: flex; align-items: center; justify-content: center;">
                        <i class="fa fa-tags" style="font-size: 1.5rem; color: #f59e0b;"></i>
                    </div>
                    <div>
                        <div style="font-size: 0.875rem; color: #6c7783; font-weight: 600; margin-bottom: 0.25rem;">Catégories</div>
                        <div style="font-size: 2rem; font-weight: 800; color: #1a2332;">-</div>
                    </div>
                </div>
            </div>

            <div style="background: white; border: 1px solid #e6edf2; border-radius: 12px; padding: 1.5rem; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);">
                <div style="display: flex; align-items: center; gap: 1rem;">
                    <div style="width: 56px; height: 56px; background: rgba(59, 130, 246, 0.1); border-radius: 12px; display: flex; align-items: center; justify-content: center;">
                        <i class="fa fa-copyright" style="font-size: 1.5rem; color: #3b82f6;"></i>
                    </div>
                    <div>
                        <div style="font-size: 0.875rem; color: #6c7783; font-weight: 600; margin-bottom: 0.25rem;">Marques</div>
                        <div style="font-size: 2rem; font-weight: 800; color: #1a2332;">-</div>
                    </div>
                </div>
            </div>
        </div>

        {# QUICK ACTIONS #}
        <div style="background: white; border: 1px solid #e6edf2; border-radius: 12px; padding: 2rem; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);">
            <h2 style="font-size: 1.25rem; font-weight: 800; color: #1a2332; margin: 0 0 1.5rem 0;">Actions rapides</h2>
            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 1rem;">
                <a href="{{ ea_url().setController('App\\Controller\\Admin\\ProductCrudController').setAction('newProduct').generateUrl() }}"
                   style="background: linear-gradient(135deg, #16C669 0%, #12a356 100%); color: white; padding: 1.25rem; border-radius: 10px; text-decoration: none; display: flex; align-items: center; gap: 1rem; transition: transform 0.2s ease; box-shadow: 0 4px 12px rgba(22, 198, 105, 0.3);"
                   onmouseover="this.style.transform='translateY(-2px)'"
                   onmouseout="this.style.transform='translateY(0)'">
                    <i class="fa fa-plus-circle" style="font-size: 1.5rem;"></i>
                    <div>
                        <div style="font-weight: 700; font-size: 1rem;">Nouveau produit</div>
                        <div style="font-size: 0.875rem; opacity: 0.9;">Ajouter au catalogue</div>
                    </div>
                </a>

                <a href="{{ ea_url().setController('App\\Controller\\Admin\\ProductImageCrudController').setAction('productImagesIndex').generateUrl() }}"
                   style="background: white; border: 2px solid #e6edf2; color: #1a2332; padding: 1.25rem; border-radius: 10px; text-decoration: none; display: flex; align-items: center; gap: 1rem; transition: all 0.2s ease;"
                   onmouseover="this.style.borderColor='#16C669'; this.style.background='rgba(22, 198, 105, 0.05)'"
                   onmouseout="this.style.borderColor='#e6edf2'; this.style.background='white'">
                    <i class="fa fa-images" style="font-size: 1.5rem; color: #16C669;"></i>
                    <div>
                        <div style="font-weight: 700; font-size: 1rem;">Gérer les images</div>
                        <div style="font-size: 0.875rem; color: #6c7783;">Galerie produits</div>
                    </div>
                </a>
            </div>
        </div>
    </div>
{% endblock %}
