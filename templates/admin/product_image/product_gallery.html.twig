{% extends 'admin/base_layout.html.twig' %}

{% block body_class 'admin-index-pro' %}

{% block content_title %}{% endblock %}
{% block page_actions %}{% endblock %}
{% block content_header_wrapper %}{% endblock %}

{% block main %}
    <div class="index-container">
        {# HERO HEADER #}
        <div class="index-hero">
            <div class="index-hero-content">
                <div class="index-hero-icon">
                    <i class="fa fa-images"></i>
                </div>
                <div>
                    <h1 class="index-hero-title">{{ product.title }}</h1>
                    <p class="index-hero-subtitle">Galerie d'images du produit</p>
                </div>
            </div>
            <div class="index-hero-actions">
                <a href="{{ ea_url().setController('App\\Controller\\Admin\\ProductImageCrudController').setAction('productImagesIndex').generateUrl() }}" class="btn-hero-secondary">
                    <i class="fa fa-arrow-left"></i>
                    <span>Retour</span>
                </a>
            </div>
        </div>

        {# ZONE D'UPLOAD DRAG & DROP #}
        <div class="upload-zone-card"
             data-controller="admin--gallery-uploader"
             data-admin--gallery-uploader-product-id-value="{{ product.id }}"
             data-admin--gallery-uploader-upload-url-value="{{ path('admin_api_product_image_upload') }}">

            <div class="upload-dropzone" data-admin--gallery-uploader-target="dropzone">
                <div class="upload-icon">
                    <i class="fa fa-cloud-upload-alt"></i>
                </div>
                <h3 class="upload-title">Glissez vos images ici</h3>
                <p class="upload-subtitle">ou cliquez pour parcourir</p>
                <p class="upload-info">PNG, JPG, WEBP jusqu'à 4 Mo • Upload multiple supporté</p>

                <input type="file"
                       multiple
                       accept="image/png,image/jpeg,image/jpg,image/webp"
                       data-admin--gallery-uploader-target="fileInput"
                       data-action="change->admin--gallery-uploader#handleFiles"
                       style="display: none;">

                <button type="button"
                        class="btn-upload-browse"
                        data-action="click->admin--gallery-uploader#triggerFileInput">
                    <i class="fa fa-folder-open"></i>
                    Parcourir les fichiers
                </button>
            </div>

            {# BARRE DE PROGRESSION #}
            <div class="upload-progress" data-admin--gallery-uploader-target="progressContainer" style="display: none;">
                <div class="progress-bar">
                    <div class="progress-fill" data-admin--gallery-uploader-target="progressBar"></div>
                </div>
                <div class="progress-text">
                    <span data-admin--gallery-uploader-target="progressText">0%</span>
                </div>
            </div>
        </div>

        {# GALERIE D'IMAGES #}
        <div class="gallery-section">
            <div class="gallery-header">
                <h2>Images du produit</h2>
                <span class="gallery-count">{{ images|length }} image{{ images|length > 1 ? 's' : '' }}</span>
            </div>

            {% if images|length > 0 %}
                <div class="gallery-grid"
                     data-controller="admin--gallery-sortable"
                     data-admin--gallery-sortable-reorder-url-value="{{ path('admin_api_product_image_reorder') }}">
                    {% for image in images %}
                        <div class="gallery-item"
                             data-image-id="{{ image.id }}"
                             data-admin--gallery-sortable-target="item">

                            {# IMAGE PRINCIPALE BADGE #}
                            {% if image.isMain %}
                                <div class="main-image-badge">
                                    <i class="fa fa-star"></i>
                                    Principale
                                </div>
                            {% endif %}

                            {# IMAGE #}
                            {# IMAGE #}
                            <div class="gallery-item-image"
                                 data-action="click->admin--gallery-lightbox#openWithSrc"
                                 data-image-src="{{ asset('uploads/products/' ~ image.filename) }}">
                                <img src="{{ asset('uploads/products/' ~ image.filename) }}"
                                     alt="{{ image.alt }}">

                                {# DRAG HANDLE #}
                                <div class="drag-handle">
                                    <i class="fa fa-grip-vertical"></i>
                                </div>
                            </div>

                            {# ACTIONS #}
                            <div class="gallery-item-actions">
                                <button type="button"
                                        class="btn-gallery-action btn-set-main"
                                        data-controller="admin--gallery-set-main"
                                        data-admin--gallery-set-main-url-value="{{ path('admin_api_product_image_set_main', {id: image.id}) }}"
                                        data-action="click->admin--gallery-set-main#setMain"
                                        title="Définir comme image principale"
                                        {% if image.isMain %}disabled{% endif %}>
                                    <i class="fa fa-star"></i>
                                </button>

                                <button type="button"
                                        class="btn-gallery-action btn-delete"
                                        data-controller="admin--gallery-delete"
                                        data-admin--gallery-delete-url-value="{{ path('admin_api_product_image_delete', {id: image.id}) }}"
                                        data-action="click->admin--gallery-delete#delete"
                                        title="Supprimer">
                                    <i class="fa fa-trash"></i>
                                </button>
                            </div>

                            {# INFO #}
                            <div class="gallery-item-info">
                                <span class="image-position">#{{ image.position }}</span>
                            </div>
                        </div>
                    {% endfor %}
                </div>

                <div class="gallery-help">
                    <i class="fa fa-info-circle"></i>
                    <span>Glissez-déposez les images pour réorganiser • Cliquez sur ⭐ pour définir l'image principale • Cliquez sur l'image pour l'agrandir</span>
                </div>
            {% else %}
                <div class="gallery-empty">
                    <i class="fa fa-images"></i>
                    <h3>Aucune image</h3>
                    <p>Uploadez vos premières images pour ce produit</p>
                </div>
            {% endif %}
        </div>
    </div>

    {# LIGHTBOX #}
    <div class="lightbox-overlay"
         data-controller="admin--gallery-lightbox"
         data-admin--gallery-lightbox-target="overlay"
         style="display: none;">
        <div class="lightbox-content">
            <button class="lightbox-close" data-action="click->admin--gallery-lightbox#close">
                <i class="fa fa-times"></i>
            </button>
            <img data-admin--gallery-lightbox-target="image" src="" alt="">
        </div>
    </div>
    <style>
        @keyframes slideIn {
            from {
                transform: translateX(400px);
                opacity: 0;
            }
            to {
                transform: translateX(0);
                opacity: 1;
            }
        }

        @keyframes slideOut {
            from {
                transform: translateX(0);
                opacity: 1;
            }
            to {
                transform: translateX(400px);
                opacity: 0;
            }
        }
    </style>

{% endblock %}
