{% extends 'admin/base_layout.html.twig' %}
{% block body_class 'admin-index-pro' %}

{% block content_title %}{% endblock %}
{% block page_actions %}{% endblock %}
{% block content_header_wrapper %}{% endblock %}

{% block main %}
    <div class="index-container">
        {# HERO HEADER #}
        <div class="index-hero">
            <div class="index-hero-content">
                <div class="index-hero-icon">
                    <i class="fa fa-box-open"></i>
                </div>
                <div>
                    <h1 class="index-hero-title">Produits</h1>
                    <p class="index-hero-subtitle">Gérez votre catalogue de produits reconditionnés</p>
                </div>
            </div>
            <div class="index-hero-actions">
                <a href="{{ ea_url().setController('App\\Controller\\Admin\\ProductCrudController').setAction('newProduct').generateUrl() }}" class="btn-hero-primary">
                    <i class="fa fa-plus"></i>
                    <span>Nouveau produit</span>
                </a>
            </div>
        </div>

        {# STATS CARDS #}
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-icon stat-icon-primary">
                    <i class="fa fa-box"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-value">{{ total_items }}</div>
                    <div class="stat-label">Produits total</div>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-icon stat-icon-success">
                    <i class="fa fa-check-circle"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-value">{{ products|filter(p => p.isPublished)|length }}</div>
                    <div class="stat-label">Publiés</div>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-icon stat-icon-warning">
                    <i class="fa fa-warehouse"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-value">{{ products|reduce((carry, p) => carry + p.stock, 0) }}</div>
                    <div class="stat-label">En stock</div>
                </div>
            </div>
        </div>

        {# TABLEAU PRODUITS #}
        <div class="data-table-card" data-controller="admin--toggle">
            <div class="data-table-header">
                <h2>Liste des produits</h2>
                <div class="data-table-actions">
                    <button class="btn-outline" data-action="click->admin--toggle#toggleFilters">
                        <i class="fa fa-filter"></i>
                        Filtres
                    </button>
                    <a href="{{ path('admin_products_export') }}" class="btn-outline">
                        <i class="fa fa-download"></i>
                        Export
                    </a>
                </div>
            </div>

            {# PANNEAU FILTRES (caché par défaut) #}
            <div class="filters-panel" data-admin--toggle-target="panel" style="display: none;">
                <form method="get" class="filters-form">
                    <div class="filter-row">
                        <div class="filter-group">
                            <label for="search">Recherche</label>
                            <input type="text" id="search" name="search" class="form-control" placeholder="Titre du produit..." value="{{ filters.search }}">
                        </div>

                        <div class="filter-group">
                            <label for="category">Catégorie</label>
                            <select id="category" name="category" class="form-control">
                                <option value="">Toutes les catégories</option>
                                {% for category in categories %}
                                    <option value="{{ category.id }}" {% if filters.category == category.id %}selected{% endif %}>
                                        {{ category.name }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="filter-group">
                            <label for="brand">Marque</label>
                            <select id="brand" name="brand" class="form-control">
                                <option value="">Toutes les marques</option>
                                {% for brand in brands %}
                                    <option value="{{ brand.id }}" {% if filters.brand == brand.id %}selected{% endif %}>
                                        {{ brand.name }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="filter-group">
                            <label for="published">Statut</label>
                            <select id="published" name="published" class="form-control">
                                <option value="">Tous les statuts</option>
                                <option value="1" {% if filters.published == '1' %}selected{% endif %}>Publié</option>
                                <option value="0" {% if filters.published == '0' %}selected{% endif %}>Brouillon</option>
                            </select>
                        </div>
                    </div>

                    <div class="filter-actions">
                        <button type="submit" class="btn-filter-apply">
                            <i class="fa fa-check"></i>
                            Appliquer les filtres
                        </button>
                        <a href="?" class="btn-filter-reset">
                            <i class="fa fa-times"></i>
                            Réinitialiser
                        </a>
                    </div>
                </form>
            </div>

            <div class="table-responsive">
                <table class="data-table">
                    <thead>
                    <tr>
                        <th width="60">
                            <input type="checkbox" class="form-check-input">
                        </th>
                        <th>Produit</th>
                        <th width="120">Prix</th>
                        <th width="120">Étiquette</th>
                        <th width="100">Stock</th>
                        <th width="100">Statut</th>
                        <th width="150">Catégorie</th>
                        <th width="120">Marque</th>
                        <th width="200" class="text-end">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for product in products %}
                        <tr>
                            <td>
                                <input type="checkbox" class="form-check-input">
                            </td>
                            <td>
                                <div class="product-cell">
                                    {% if product.mainImage %}
                                        <img src="{{ asset('uploads/products/' ~ product.mainImage) }}" alt="{{ product.title }}" class="product-thumbnail">
                                    {% else %}
                                        <div class="product-thumbnail-placeholder">
                                            <i class="fa fa-image"></i>
                                        </div>
                                    {% endif %}
                                    <div class="product-info">
                                        <div class="product-title">{{ product.title }}</div>
                                        <div class="product-meta">#{{ product.id }}</div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span class="price-badge">{{ (product.price / 100)|number_format(2, ',', ' ') }} €</span>
                            </td>
                            <td>
                                {% if product.energyLabel %}
                                    <span class="badge text-bg-{{ product.energyLabel.value == 'A' or product.energyLabel.value == 'B' ? 'success' : (product.energyLabel.value == 'C' ? 'info' : (product.energyLabel.value == 'D' ? 'primary' : (product.energyLabel.value == 'E' ? 'warning' : 'danger'))) }}">
                                            {{ product.energyLabel.value == 'NA' ? 'Non classé' : product.energyLabel.value }}
                                        </span>
                                {% else %}
                                    <span class="badge text-bg-secondary">-</span>
                                {% endif %}
                            </td>
                            <td>
                                    <span class="stock-badge {% if product.stock > 5 %}stock-high{% elseif product.stock > 0 %}stock-medium{% else %}stock-low{% endif %}">
                                        {{ product.stock }}
                                    </span>
                            </td>
                            <td>
                                {% if product.isPublished %}
                                    <span class="status-badge status-published">
                                            <i class="fa fa-check-circle"></i>
                                            Publié
                                        </span>
                                {% else %}
                                    <span class="status-badge status-draft">
                                            <i class="fa fa-clock"></i>
                                            Brouillon
                                        </span>
                                {% endif %}
                            </td>
                            <td>
                                <span class="category-badge">{{ product.category ? product.category.name : '-' }}</span>
                            </td>
                            <td>
                                <span class="brand-badge">{{ product.brand ? product.brand.name : '-' }}</span>
                            </td>
                            <td class="text-end">
                                <div class="action-buttons">
                                    <a href="{{ ea_url().setController('App\\Controller\\Admin\\ProductCrudController').setAction('editProduct').setEntityId(product.id).generateUrl() }}" class="btn-action btn-action-edit" title="Modifier">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                    <form method="post" action="{{ path('admin_product_delete', {id: product.id}) }}" style="display: inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce produit ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                                        <button type="submit" class="btn-action btn-action-delete" title="Supprimer">
                                            <i class="fa fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="9" class="text-center py-5">
                                <div class="empty-state">
                                    <i class="fa fa-box-open"></i>
                                    <h3>Aucun produit</h3>
                                    <p>Commencez par créer votre premier produit</p>
                                    <a href="{{ ea_url().setController('App\\Controller\\Admin\\ProductCrudController').setAction('newProduct').generateUrl() }}" class="btn-hero-primary mt-3">
                                        <i class="fa fa-plus"></i>
                                        Créer un produit
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

            {# PAGINATION #}
            {% if total_pages > 1 %}
                <div class="pagination-wrapper">
                    <div class="pagination-info">
                        Affichage de {{ (current_page - 1) * per_page + 1 }} à {{ min(current_page * per_page, total_items) }} sur {{ total_items }} résultats
                    </div>
                    <nav class="pagination-nav">
                        <ul class="pagination">
                            {% if current_page > 1 %}
                                <li class="page-item">
                                    <a href="?page={{ current_page - 1 }}" class="page-link">
                                        <i class="fa fa-chevron-left"></i>
                                    </a>
                                </li>
                            {% endif %}

                            {% for page in 1..total_pages %}
                                {% if page == current_page %}
                                    <li class="page-item active">
                                        <span class="page-link">{{ page }}</span>
                                    </li>
                                {% elseif page == 1 or page == total_pages or (page >= current_page - 2 and page <= current_page + 2) %}
                                    <li class="page-item">
                                        <a href="?page={{ page }}" class="page-link">{{ page }}</a>
                                    </li>
                                {% elseif page == current_page - 3 or page == current_page + 3 %}
                                    <li class="page-item disabled">
                                        <span class="page-link">...</span>
                                    </li>
                                {% endif %}
                            {% endfor %}

                            {% if current_page < total_pages %}
                                <li class="page-item">
                                    <a href="?page={{ current_page + 1 }}" class="page-link">
                                        <i class="fa fa-chevron-right"></i>
                                    </a>
                                </li>
                            {% endif %}
                        </ul>
                    </nav>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
