{% extends 'base.html.twig' %}

{% block title %}{{ product.title }} — Recyclum{% endblock %}
{% block meta_description %}{{ product.shortDescription|default('Découvrez ce produit reconditionné garanti jusqu\'à 24 mois') }}{% endblock %}

{% block body %}

    {# === BREADCRUMB === #}
    <section class="breadcrumb-modern">
        <div class="container">
            <nav class="breadcrumb-nav">
                <a href="{{ path('app_home') }}" class="breadcrumb-link">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                    </svg>
                    Accueil
                </a>
                <span class="breadcrumb-separator">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="9 18 15 12 9 6"></polyline>
                </svg>
            </span>
                <a href="{{ path('catalog_index') }}" class="breadcrumb-link">Catalogue</a>
                {% if product.category %}
                    <span class="breadcrumb-separator">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="9 18 15 12 9 6"></polyline>
                    </svg>
                </span>
                    <a href="{{ path('catalog_index', {category: product.category.id}) }}" class="breadcrumb-link">
                        {{ product.category.name }}
                    </a>
                {% endif %}
                <span class="breadcrumb-separator">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="9 18 15 12 9 6"></polyline>
                </svg>
            </span>
                <span class="breadcrumb-current">{{ product.title }}</span>
            </nav>
        </div>
    </section>

    {# === PRODUIT DÉTAIL === #}
    <section class="product-detail-modern">
        <div class="container">
            <div class="product-detail-grid">

                {# === GALERIE IMAGES === #}
                <div class="product-gallery">
                    {% if product.images|length > 0 %}
                        {# Image principale #}
                        <div class="gallery-main" data-controller="product-gallery" data-gallery-id="product-{{ product.id }}">
                            <div class="gallery-main-image">
                                <a href="{{ asset('uploads/products/' ~ product.getMainImageFilename()) }}"
                                   data-gallery="product-{{ product.id }}"
                                   data-title="{{ product.title }}">
                                    <img src="{{ asset('uploads/products/' ~ product.getMainImageFilename()) }}"
                                         alt="{{ product.title }}">
                                </a>
                            </div>

                            {# Badges sur l'image #}
                            <div class="gallery-badges">
                                {% if product.stock > 0 %}
                                    <span class="gallery-badge badge-stock">
                        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="20 6 9 17 4 12"></polyline>
                        </svg>
                        En stock
                    </span>
                                {% else %}
                                    <span class="gallery-badge badge-out">Rupture de stock</span>
                                {% endif %}
                            </div>

                            {# Miniatures cliquables #}
                            {% if product.images|length > 1 %}
                                <div class="gallery-thumbs">
                                    {% for img in product.images %}
                                        <a href="{{ asset('uploads/products/' ~ img.filename) }}"
                                           data-gallery="product-{{ product.id }}"
                                           data-title="{{ product.title }}"
                                           class="gallery-thumb">
                                            <img src="{{ asset('uploads/products/' ~ img.filename) }}"
                                                 alt="{{ product.title }}">
                                        </a>
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>
                    {% else %}
                        <div class="gallery-placeholder">
                            <svg width="120" height="120" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                                <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                                <circle cx="8.5" cy="8.5" r="1.5"></circle>
                                <polyline points="21 15 16 10 5 21"></polyline>
                            </svg>
                            <p>Aucune image disponible</p>
                        </div>
                    {% endif %}
                </div>

                {# === INFORMATIONS PRODUIT === #}
                <div class="product-info-detail">
                    {# Header #}
                    <div class="product-header">
                        <div class="product-category-badge">
                            {{ product.category.name }}
                            {% if product.brand %}
                                <span class="category-separator">•</span>
                                {{ product.brand.name }}
                            {% endif %}
                        </div>

                        <h1 class="product-title-detail">{{ product.title }}</h1>

                        {# Méta infos #}
                        <div class="product-meta-badges">
                            {% if product.energyLabel %}
                                <div class="meta-badge energy-badge-{{ product.energyLabel.value|lower }}">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z"></path>
                                    </svg>
                                    Classe {{ product.energyLabel.value }}
                                </div>
                            {% endif %}

                            {% if product.warrantyMonths %}
                                <div class="meta-badge warranty-badge">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                                    </svg>
                                    Garantie {{ product.warrantyMonths }} mois
                                </div>
                            {% endif %}
                        </div>
                    </div>

                    {# Prix et CTA #}
                    <div class="product-price-section">
                        <div class="price-block">
                            <div class="price-label">Prix</div>
                            <div class="price-amount">{{ (product.price / 100)|number_format(2, ',', ' ') }} €</div>
                            <div class="price-tax">TVA incluse • Livraison Paris & IDF</div>
                        </div>

                        <div class="cta-group" data-controller="cta-actions">
                            {# CTA Principal - Achat #}
                            <a href="#contact"
                               class="btn-cta-primary"
                               data-action="click->cta-actions#scrollToSection"
                               data-cta-actions-section-param="contact">
                                <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <circle cx="9" cy="21" r="1"></circle>
                                    <circle cx="20" cy="21" r="1"></circle>
                                    <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
                                </svg>
                                <span>Je l'achète !</span>
                            </a>

                            {# Séparateur #}
                            <div class="cta-separator">
                                <span class="separator-line"></span>
                                <span class="separator-text">ou</span>
                                <span class="separator-line"></span>
                            </div>

                            {# CTA Secondaire - Réparation #}
                            <div class="repair-callout">
                                <div class="repair-icon">
                                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <circle cx="12" cy="12" r="10"></circle>
                                        <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"></path>
                                        <line x1="12" y1="17" x2="12.01" y2="17"></line>
                                    </svg>
                                </div>
                                <div class="repair-content">
                                    <p class="repair-question">Vous avez déjà un appareil similaire en panne ?</p>
                                    <a href="#repair"
                                       class="btn-repair"
                                       data-action="click->cta-actions#scrollToSection"
                                       data-cta-actions-section-param="repair">
                                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"></path>
                                        </svg>
                                        Faire réparer mon appareil
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    {# Description #}
                    {% if product.shortDescription %}
                        <div class="product-description-section">
                            <h2 class="section-title-detail">Description</h2>
                            <div class="description-content">
                                {{ product.shortDescription|nl2br }}
                            </div>
                        </div>
                    {% endif %}

                    {# Caractéristiques #}
                    <div class="product-features-section">
                        <h2 class="section-title-detail">Caractéristiques</h2>
                        <div class="features-grid">
                            {% if product.category %}
                                <div class="feature-item">
                                    <div class="feature-icon">
                                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path>
                                        </svg>
                                    </div>
                                    <div class="feature-content">
                                        <div class="feature-label">Catégorie</div>
                                        <div class="feature-value">{{ product.category.name }}</div>
                                    </div>
                                </div>
                            {% endif %}

                            {% if product.brand %}
                                <div class="feature-item">
                                    <div class="feature-icon">
                                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                                        </svg>
                                    </div>
                                    <div class="feature-content">
                                        <div class="feature-label">Marque</div>
                                        <div class="feature-value">{{ product.brand.name }}</div>
                                    </div>
                                </div>
                            {% endif %}

                            {% if product.energyLabel %}
                                <div class="feature-item">
                                    <div class="feature-icon">
                                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z"></path>
                                        </svg>
                                    </div>
                                    <div class="feature-content">
                                        <div class="feature-label">Classe énergétique</div>
                                        <div class="feature-value">{{ product.energyLabel.value }}</div>
                                    </div>
                                </div>
                            {% endif %}

                            {% if product.warrantyMonths %}
                                <div class="feature-item">
                                    <div class="feature-icon">
                                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                                        </svg>
                                    </div>
                                    <div class="feature-content">
                                        <div class="feature-label">Garantie</div>
                                        <div class="feature-value">{{ product.warrantyMonths }} mois</div>
                                    </div>
                                </div>
                            {% endif %}

                            <div class="feature-item">
                                <div class="feature-icon">
                                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <circle cx="12" cy="12" r="10"></circle>
                                        <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"></path>
                                        <line x1="12" y1="17" x2="12.01" y2="17"></line>
                                    </svg>
                                </div>
                                <div class="feature-content">
                                    <div class="feature-label">État</div>
                                    <div class="feature-value">Reconditionné et testé</div>
                                </div>
                            </div>

                            <div class="feature-item">
                                <div class="feature-icon">
                                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <rect x="1" y="3" width="15" height="13"></rect>
                                        <polygon points="16 8 20 8 23 11 23 16 16 16 16 8"></polygon>
                                        <circle cx="5.5" cy="18.5" r="2.5"></circle>
                                        <circle cx="18.5" cy="18.5" r="2.5"></circle>
                                    </svg>
                                </div>
                                <div class="feature-content">
                                    <div class="feature-label">Livraison</div>
                                    <div class="feature-value">Paris & Île-de-France</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    {# Avantages #}
                    <div class="product-benefits-section">
                        <h2 class="section-title-detail">Pourquoi choisir ce produit ?</h2>
                        <div class="benefits-list">
                            <div class="benefit-item">
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                                    <polyline points="22 4 12 14.01 9 11.01"></polyline>
                                </svg>
                                <span>Testé et vérifié en atelier</span>
                            </div>
                            <div class="benefit-item">
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                                    <polyline points="22 4 12 14.01 9 11.01"></polyline>
                                </svg>
                                <span>Garantie pièces et main d'œuvre</span>
                            </div>
                            <div class="benefit-item">
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                                    <polyline points="22 4 12 14.01 9 11.01"></polyline>
                                </svg>
                                <span>Livraison et installation disponibles</span>
                            </div>
                            <div class="benefit-item">
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                                    <polyline points="22 4 12 14.01 9 11.01"></polyline>
                                </svg>
                                <span>Économie jusqu'à 70% vs neuf</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {# === PRODUITS SIMILAIRES === #}
    {% if relatedProducts|length > 0 %}
        <section class="related-products-modern">
            <div class="container">
                <div class="related-header">
                    <h2 class="related-title">Produits similaires</h2>
                    <a href="{{ path('catalog_index', {category: product.category.id}) }}" class="related-link">
                        Voir tous les {{ product.category.name }}
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <line x1="5" y1="12" x2="19" y2="12"></line>
                            <polyline points="12 5 19 12 12 19"></polyline>
                        </svg>
                    </a>
                </div>

                <div class="related-grid">
                    {% for p in relatedProducts|slice(0, 4) %}
                        <article class="related-card">
                            <a href="{{ path('catalog_show', {slug: p.slug}) }}" class="related-card-link">
                                <div class="related-image">
                                    {% if p.images|length > 0 %}
                                        <img src="{{ asset('uploads/products/' ~ p.images.first.filename) }}"
                                             alt="{{ p.title }}"
                                             loading="lazy">
                                    {% else %}
                                        <div class="related-placeholder">
                                            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                                                <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                                                <circle cx="8.5" cy="8.5" r="1.5"></circle>
                                                <polyline points="21 15 16 10 5 21"></polyline>
                                            </svg>
                                        </div>
                                    {% endif %}
                                </div>
                                <div class="related-content">
                                    <h3 class="related-title-card">{{ p.title }}</h3>
                                    <div class="related-price">{{ (p.price / 100)|format_currency('EUR') }}</div>
                                </div>
                            </a>
                        </article>
                    {% endfor %}
                </div>
            </div>
        </section>
    {% endif %}

    {# === SECTION CONTACT === #}
    <section id="contact" class="contact-section">
        <div class="container">
            <div class="contact-card">
                <div class="contact-header">
                    <h2 class="contact-title">Commander ce produit</h2>
                    <p class="contact-description">Remplissez ce formulaire et nous vous recontacterons rapidement</p>
                </div>

                <form action="/contact" method="post" class="contact-form">
                    <input type="hidden" name="produit" value="{{ product.slug }}">

                    <div class="form-row">
                        <div class="form-group">
                            <label for="nom">Nom complet</label>
                            <input type="text" id="nom" name="nom" required class="form-control">
                        </div>

                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" id="email" name="email" required class="form-control">
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="telephone">Téléphone</label>
                            <input type="tel" id="telephone" name="telephone" required class="form-control">
                        </div>

                        <div class="form-group">
                            <label for="code_postal">Code postal</label>
                            <input type="text" id="code_postal" name="code_postal" class="form-control">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="message">Message (optionnel)</label>
                        <textarea id="message" name="message" rows="4" class="form-control"></textarea>
                    </div>

                    <button type="submit" class="btn-submit">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <line x1="22" y1="2" x2="11" y2="13"></line>
                            <polygon points="22 2 15 22 11 13 2 9 22 2"></polygon>
                        </svg>
                        Envoyer ma demande
                    </button>
                </form>
            </div>
        </div>
    </section>

    {# === SECTION RÉPARATION === #}
    <section id="repair" class="repair-section">
        <div class="container">
            <div class="repair-card">
                <div class="repair-header">
                    <div class="repair-icon-large">
                        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"></path>
                        </svg>
                    </div>
                    <h2 class="repair-title">Service de réparation</h2>
                    <p class="repair-description">Diagnostic gratuit • Devis transparent • Intervention sous 48h</p>
                </div>

                <div class="repair-cta">
                    <a href="/reparation" class="btn-repair-primary">
                        Demander une réparation
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <line x1="5" y1="12" x2="19" y2="12"></line>
                            <polyline points="12 5 19 12 12 19"></polyline>
                        </svg>
                    </a>
                    <a href="tel:+33143076363" class="repair-phone">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
                        </svg>
                        01 43 07 63 63
                    </a>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
