{% extends 'base.html.twig' %}
{% block title %}{{ product.title }} — Recyclum{% endblock %}
{% block body %}
    <section class="container py-4">
        <div class="row g-4">
            <div class="col-12 col-lg-6">
                {# galerie #}
                {% if product.images|length %}
                    <div class="ratio ratio-4x3 mb-3 bg-body-tertiary rounded">
                        <img src="{{ '/uploads/products/' ~ product.getMainImageFilename() }}" alt="{{ product.title }}" class="w-100 h-100" style="object-fit:cover;">
                    </div>
                    <div class="d-flex flex-wrap gap-2">
                        {% for img in product.images %}
                            <img src="{{ '/uploads/products/' ~ img.filename }}" alt="{{ product.title }}" width="90" height="70" style="object-fit:cover;border-radius:8px;border:1px solid var(--border);">
                        {% endfor %}
                    </div>
                {% else %}
                    <div class="ratio ratio-4x3 bg-body-tertiary rounded"></div>
                {% endif %}
            </div>
            <div class="col-12 col-lg-6">
                <h1 class="h3 fw-bold mb-1">{{ product.title }}</h1>
                <div class="text-soft mb-2">
                    {% if product.brand %}{{ product.brand.name }}{% endif %}
                    {% if product.category %} • {{ product.category.name }}{% endif %}
                </div>
                <div class="mb-3">
                    {% include 'admin/field/energy_label_badge.html.twig' with { value: product.energyLabel } only %}
                </div>
                <div class="display-6 fw-bold mb-3">{{ (product.price/100)|number_format(0, ',', ' ') }} €</div>
                <div class="mb-3">{{ product.shortDescription|nl2br }}</div>
                <a class="btn btn-primary btn-lg" href="/contact">Demander ce produit</a>
            </div>
        </div>
    </section>
{% endblock %}
