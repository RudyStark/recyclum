{% extends 'base.html.twig' %}

{% block title %}Avis clients — Recyclum{% endblock %}
{% block meta_description %}Découvrez les avis de nos clients sur nos services de réparation, vente et rachat d'électroménager à Paris 12. Plus de 4 000 avis vérifiés.{% endblock %}

{% block body %}
    {# ============================================
       SECTION 1 : HERO AVIS MODERNE
       ============================================ #}
    <section class="hero-modern">
        <div class="hero-gradient-overlay"></div>
        <div class="container position-relative">
            <div class="row justify-content-center">
                <div class="col-lg-10 text-center">
                    {# Badge animé #}
                    <div class="hero-badge mb-3">
                        <span class="badge-glow"></span>
                        <i class="bi bi-star-fill"></i>
                        Plus de 4 000 avis vérifiés
                    </div>

                    <h1 class="hero-title mb-3">
                        Ce que nos clients
                        <span class="gradient-text">pensent de nous</span>
                    </h1>

                    <p class="hero-subtitle mb-4">
                        Des retours authentiques sur nos services de réparation, vente et rachat
                    </p>

                    {# Note globale #}
                    <div class="d-inline-flex align-items-center gap-3 p-4 mb-4" style="background: rgba(255, 255, 255, 0.95); border-radius: 16px; backdrop-filter: blur(10px); box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);">
                        <div class="display-4 fw-bold" style="color: #16C669;">{{ stats.average }}</div>
                        <div class="text-start">
                            <div class="mb-1">
                                {% for i in 1..5 %}
                                    <i class="bi bi-star-fill text-warning" style="font-size: 1.5rem;"></i>
                                {% endfor %}
                            </div>
                            <div class="small" style="color: #6C7783;">
                                Basé sur {{ stats.total|number_format(0, ',', ' ') }} avis
                            </div>
                        </div>
                    </div>

                    {# Stats en temps réel #}
                    <div class="hero-stats mt-5">
                        <div class="stat-item">
                            <div class="stat-number">{{ stats.distribution[5]|number_format(0, ',', ' ') }}</div>
                            <div class="stat-label">Avis 5 étoiles</div>
                        </div>
                        <div class="stat-divider"></div>
                        <div class="stat-item">
                            <div class="stat-number">{{ stats.average }}/5</div>
                            <div class="stat-label">Note moyenne</div>
                        </div>
                        <div class="stat-divider"></div>
                        <div class="stat-item">
                            <div class="stat-number">95%</div>
                            <div class="stat-label">Satisfaction</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {# ============================================
       SECTION 2 : RÉPARTITION DES NOTES
       ============================================ #}
    <section class="section-modern py-6">
        <div class="container">
            <div class="text-center mb-5">
                <div class="section-label">Statistiques</div>
                <h2 class="section-title-modern">Répartition des notes</h2>
                <p class="section-subtitle">Transparence totale sur nos avis clients</p>
            </div>

            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="feature-card-glass p-4">
                        {% for rating in 5..1 %}
                            {% set count = stats.distribution[rating] %}
                            {% set percentage = (count / stats.total * 100)|round %}

                            <div class="d-flex align-items-center gap-3 mb-3">
                                <div style="min-width: 110px;">
                                    {% for i in 1..5 %}
                                        {% if i <= rating %}
                                            <i class="bi bi-star-fill text-warning"></i>
                                        {% else %}
                                            <i class="bi bi-star" style="color: #E6EDF2;"></i>
                                        {% endif %}
                                    {% endfor %}
                                </div>

                                <div class="flex-grow-1">
                                    <div class="progress" style="height: 12px; background: rgba(22, 198, 105, 0.1); border-radius: 8px;">
                                        <div class="progress-bar" style="width: {{ percentage }}%; background: linear-gradient(90deg, #16C669 0%, #6FDEA7 100%); border-radius: 8px;"></div>
                                    </div>
                                </div>

                                <div style="min-width: 90px; text-align: right;">
                                    <span style="font-weight: 700; color: #0F1418;">{{ count|number_format(0, ',', ' ') }}</span>
                                    <span style="color: #6C7783; font-size: 0.9rem;"> avis</span>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </section>

    {# ============================================
       SECTION 3 : TOP AVIS (LES PLUS UTILES)
       ============================================ #}
    <section class="section-gray-gradient py-6">
        <div class="container">
            <div class="text-center mb-5">
                <div class="section-label">Meilleurs avis</div>
                <h2 class="section-title-modern">
                    <i class="bi bi-trophy-fill text-warning me-2"></i>
                    Avis les plus utiles
                </h2>
                <p class="section-subtitle">Les témoignages qui comptent le plus</p>
            </div>

            <div class="row g-4">
                {% for review in topReviews %}
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="feature-card-glass h-100 d-flex flex-column">
                            {# Header avec note - hauteur fixe #}
                            <div class="d-flex justify-content-between align-items-start mb-3" style="min-height: 40px;">
                                <div>
                                    {% for i in 1..5 %}
                                        {% if i <= review.rating %}
                                            <i class="bi bi-star-fill text-warning"></i>
                                        {% else %}
                                            <i class="bi bi-star" style="color: #E6EDF2;"></i>
                                        {% endif %}
                                    {% endfor %}
                                </div>
                                {% if review.verified %}
                                    <span class="badge" style="background: rgba(22, 198, 105, 0.1); color: #16C669; border: 1px solid rgba(22, 198, 105, 0.3); padding: 0.375rem 0.75rem; border-radius: 8px; font-size: 0.75rem; font-weight: 700;">
                                        <i class="bi bi-patch-check-fill"></i> Vérifié
                                    </span>
                                {% endif %}
                            </div>

                            {# Texte de l'avis - prend l'espace disponible #}
                            <blockquote class="mb-3 flex-grow-1" style="border-left: 3px solid #16C669; padding-left: 1rem;">
                                <p style="color: #475569; line-height: 1.6; margin: 0; font-style: italic;">"{{ review.text }}"</p>
                            </blockquote>

                            {# Footer - hauteur fixe et aligné en bas #}
                            <div class="d-flex justify-content-between align-items-center pt-3 mt-auto" style="border-top: 1px solid rgba(15, 20, 24, 0.1); min-height: 50px;">
                                <cite class="fw-bold" style="font-style: normal; color: #0F1418;">{{ review.author }}</cite>
                                <time style="color: #6C7783; font-size: 0.85rem;" datetime="{{ review.date }}">
                                    {{ review.date|date('d/m/Y') }}
                                </time>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

    {# ============================================
       SECTION 4 : TOUS LES AVIS
       ============================================ #}
    <section class="section-modern py-6">
        <div class="container">
            <div class="text-center mb-5">
                <div class="section-label">Témoignages</div>
                <h2 class="section-title-modern">Tous les avis</h2>
            </div>

            <div class="row justify-content-center">
                <div class="col-lg-10">
                    {% for review in allReviews %}
                        <div class="mb-3 p-3" style="background: #FFFFFF; border: 1px solid #E6EDF2; border-radius: 12px; box-shadow: 0 2px 8px rgba(15, 20, 24, 0.04);">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <div>
                                    <div class="fw-bold mb-1" style="color: #0F1418; font-size: 0.95rem;">{{ review.author }}</div>
                                    <div>
                                        {% for i in 1..5 %}
                                            {% if i <= review.rating %}
                                                <i class="bi bi-star-fill" style="color: #FFC107; font-size: 0.85rem;"></i>
                                            {% else %}
                                                <i class="bi bi-star" style="color: #E6EDF2; font-size: 0.85rem;"></i>
                                            {% endif %}
                                        {% endfor %}
                                    </div>
                                </div>
                                <div class="text-end">
                                    <time style="color: #6C7783; font-size: 0.8rem;" datetime="{{ review.date }}">
                                        {{ review.date|date('d/m/Y') }}
                                    </time>
                                    {% if review.verified %}
                                        <div class="mt-1">
                                            <span style="display: inline-block; background: rgba(22, 198, 105, 0.1); color: #16C669; border: 1px solid rgba(22, 198, 105, 0.3); padding: 0.15rem 0.4rem; border-radius: 4px; font-size: 0.65rem; font-weight: 700;">
                                                <i class="bi bi-patch-check-fill"></i> Vérifié
                                            </span>
                                        </div>
                                    {% endif %}
                                </div>
                            </div>

                            <p style="color: #475569; line-height: 1.5; margin: 0; font-size: 0.9rem;">{{ review.text }}</p>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>

    {# ============================================
       SECTION 5 : CTA - LAISSER UN AVIS
       ============================================ #}
    <section class="cta-modern">
        <div class="cta-gradient-bg"></div>
        <div class="container position-relative">
            <div class="row justify-content-center text-center">
                <div class="col-lg-8">
                    <div class="cta-icon-badge mb-4">
                        <i class="bi bi-star-fill"></i>
                    </div>
                    <h2 class="cta-title mb-3">Vous aussi, partagez votre expérience</h2>
                    <p class="cta-subtitle mb-4">Votre avis nous aide à améliorer nos services</p>
                    <a href="https://g.page/r/VOTRE_LIEN_GOOGLE_BUSINESS/review" target="_blank" class="btn-cta-light">
                        <i class="bi bi-star-fill"></i>
                        Laisser un avis sur Google
                        <i class="bi bi-arrow-right ms-2"></i>
                    </a>
                </div>
            </div>
        </div>
    </section>

    {# ============================================
       SECTION 6 : FAQ AVIS
       ============================================ #}
    <section class="section-modern py-6">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="text-center mb-5">
                        <div class="section-label">Support</div>
                        <h2 class="section-title-modern">Questions fréquentes</h2>
                    </div>

                    <div class="accordion-modern" id="faqAccordion">
                        <div class="accordion-item-modern">
                            <button class="accordion-button-modern" type="button" data-bs-toggle="collapse" data-bs-target="#faq1">
                                <span class="accordion-icon"><i class="bi bi-plus-lg"></i></span>
                                Comment vérifiez-vous l'authenticité des avis ?
                            </button>
                            <div id="faq1" class="accordion-collapse collapse show" data-bs-parent="#faqAccordion">
                                <div class="accordion-body-modern">
                                    Tous nos avis proviennent de clients ayant effectué un achat ou une prestation de service chez Recyclum. Les avis Google sont automatiquement vérifiés par Google.
                                </div>
                            </div>
                        </div>

                        <div class="accordion-item-modern">
                            <button class="accordion-button-modern collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq2">
                                <span class="accordion-icon"><i class="bi bi-plus-lg"></i></span>
                                Publiez-vous tous les avis, même négatifs ?
                            </button>
                            <div id="faq2" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                <div class="accordion-body-modern">
                                    Oui, nous publions tous les avis sans exception. Les retours négatifs nous permettent de nous améliorer continuellement.
                                </div>
                            </div>
                        </div>

                        <div class="accordion-item-modern">
                            <button class="accordion-button-modern collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq3">
                                <span class="accordion-icon"><i class="bi bi-plus-lg"></i></span>
                                Comment puis-je modifier ou supprimer mon avis ?
                            </button>
                            <div id="faq3" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                <div class="accordion-body-modern">
                                    Pour modifier votre avis Google, rendez-vous sur votre profil Google et retrouvez votre avis dans vos contributions. Vous pouvez le modifier ou le supprimer à tout moment.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
